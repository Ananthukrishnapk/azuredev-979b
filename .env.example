# Environment Variables for Azure Deployment
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Azure OpenAI / AI Foundry Configuration
AZURE_OPENAI_ENDPOINT=https://johngeorge-2562-resource.openai.azure.com/openai/v1/
AZURE_OPENAI_API_KEY=<your-api-key>
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Google Search Console (Optional)
GSC_CLIENT_ID=
GSC_CLIENT_SECRET=
GSC_REFRESH_TOKEN=
GSC_SITE_URL=

# Google Safe Browsing API (Optional)
SAFE_BROWSING_API_KEY=

# Application Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# API Settings
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=1

# Security (generate strong random keys)
# SECRET_KEY=your-secret-key-here
# JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Settings (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
